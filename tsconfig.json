{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "assets/*",
                "bower_components/*",
                "src/decorators/*",
                "src/config/*",
                "src/lib/*",
                "src/decorators/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "files/*"
    ]
}